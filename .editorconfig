# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
insert_final_newline = false

[*.{json,yml,yaml}]
indent_size = 2

[*.{js,ts,vue}]
indent_size = 4

[*.{html,css,scss}]
indent_size = 2